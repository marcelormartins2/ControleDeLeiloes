@model ControleDeLeiloes.Models.Leilao
@{ ViewData["Title"] = "Detalhes"; }
<!-- Start .row -->
<div class="row">
    <div class="col-lg-12">
        <!-- col-lg-12 start here -->
        <div class="panel panel-default plain toggle panelMove panelClose panelRefresh">
            <!-- Start .panel -->
            <div class="panel-heading blue-light-bg">
                <h4 class="panel-title">Leilão: @Html.DisplayFor(model => model.Descricao)</h4>
            </div>
            <div class="panel-body">
                <partial name="_details_delete" />
                <div>
                    <p>
                        <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
                        <a asp-action="Delete" asp-route-id="@Model.Id">Deletar</a> |
                        <a asp-action="Index">Voltar para lista</a>
                    </p>
                </div>
            </div>
        </div>
        <!-- End .panel -->
    </div>
    <!-- col-lg-12 end here -->
</div>
<!-- End .row -->
@*Lotes deste leilão*@

<!-- Start .row -->
<div class="row">
    <div class="col-lg-12">
        <!-- col-lg-12 start here -->
        <div class="panel panel-default plain toggle panelMove panelClose panelRefresh">
            <!-- Start .panel -->
            <div class="panel-heading blue-light-bg">
                <h4 class="panel-title">Lotes</h4>
            </div>
            <div class="panel-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Lote</th>
                            <th>Produto</th>
                            <th>Aval</th>
                            <th>Cond</th>
                            <th>Lance</th>
                            <th>Pago</th>
                            <th class="glyphicon glyphicon-ok"></th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Lote</th>
                            <th>Produto</th>
                            <th>Aval</th>
                            <th>Cond</th>
                            <th>Lance</th>
                            <th>Pago</th>
                            <th class="glyphicon glyphicon-ok"></th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @{var x = 1; }
                        @foreach (var lote in Model.Lote)
                        {
                            <tr>
                                <td>
                                    <a asp-controller="Lotes" asp-action="Details" asp-route-id='@lote.Id'>
                                        @Html.DisplayFor(modelItem => lote.Numero)
                                    </a>
                                </td>
                                <td>
                                    <a asp-controller="Produtos" asp-action="Details" asp-route-id="@lote.ProdutoId">
                                        @Html.DisplayFor(modelItem => lote.Produto.Titulo)
                                    </a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => lote.VlAvalicao)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => lote.VlCondicional)
                                </td>
                                <td id="lance-@x" contenteditable="true" onkeypress="AlterarLance(event, @lote.Id, @x)">
                                    @Html.DisplayFor(modelItem => lote.VlLance)
                                </td>
                                <td id="vlPago-@x" contenteditable="true" onkeypress="AlterarVlPago(event, @lote.Id, @x)">
                                    @Html.DisplayFor(modelItem => lote.VlPago)
                                </td>
                                <td id="ok-@x" class="glyphicon glyphicon-ok-sign" style="color:forestgreen">
                                </td>
                            </tr>
                            x = x + 1;
                        }
                    </tbody>
                </table>
            </div>
            <div class="panel-heading">
                <p>
                <a asp-controller="Lotes" asp-action="Create">Adicionar</a>
                    </p>
            </div>
        </div>
        <!-- End .panel -->
    </div>
    <!-- col-lg-12 end here -->
</div>
<!-- End .row -->
@section scripts
{
    <script type="text/javascript">
       function AlterarLance(event, idLote, item)
       {
           var element = "ok-" + item;
           document.getElementById(element).style.color ="red";
            if (event.keyCode == 13)
            {
                element = 'lance-' + item
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("AlterarLance", "Lotes")',
                    data: { id: idLote, val: document.getElementById(element).innerText },
                    success: function ()
                    {
                        element = "ok-" + item;
                        document.getElementById(element).style.color = "forestgreen";
                        x = item + 1;
                        element = "lance-" + x;
                        document.getElementById(element).focus();
                    }
                });
                event.preventDefault();
            }
        }
    </script>
}