@using ControleDeLeiloes.Controllers
@model IEnumerable<ControleDeLeiloes.Models.Lote>

<div class="panel panel-default panel-controls">
    <!-- .page-content-wrapper -->
    <div class="page-content-wrapper">
        <div class="page-content-inner">
            <!-- Start .row -->
            <div class="row">
                <div class="col-lg-12">
                    <!-- col-lg-12 start here -->
                    <div class="panel panel-default plain toggle panelMove panelClose panelRefresh">
                        <!-- Start .panel -->
                        <div class="panel-heading">
                            <h4 class="panel-title">Produtos/Leilão</h4>
                            <a asp-action="Create">
                                Adicionar
                            </a>
                        </div>
                        <div class="panel-body">
                            <table id="basic-datatables" class="table table-striped table-bordered" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>Lote</th>
                                        <th>Produto</th>
                                        <th>Leilao</th>
                                        <th>Aval</th>
                                        <th>Cond</th>
                                        <th>Lance</th>
                                        <th>Pago</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>Lote</th>
                                        <th>Produto</th>
                                        <th>Leilao</th>
                                        <th>Aval</th>
                                        <th>Cond</th>
                                        <th>Lance</th>
                                        <th>Pago</th>
                                    </tr>
                                </tfoot>
                                <tbody>
                                    @foreach (Lote lote in Model)
                                    {
                                        <tr>
                                            <td>
                                                <a asp-action="Details" asp-route-id='@lote.Id'>
                                                    @Html.DisplayFor(modelItem => lote.Numero)
                                                </a>
                                            </td>
                                            @*@foreach (Produto produto in lote.LoteProdutos)
                                            {
                                                <td>
                                                    <a asp-controller="Produtos" asp-action="Details" asp-route-id="@produto.Id">
                                                        @Html.DisplayFor(modelItem => produto.Titulo)
                                                    </a>
                                                </td>
                                            }*@
                                            <td>
                                                <a asp-controller="Leiloes" asp-action="Details" asp-route-id="@lote.LeilaoId">
                                                    @Html.DisplayFor(modelItem => lote.Leilao.Descricao)
                                                </a>
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => lote.VlAvalicao)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => lote.VlCondicional)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => lote.VlLance)
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- End .panel -->
                </div>
            </div>
            <!-- End .row -->
        </div>
        <!-- End .page-content-inner -->
    </div>
    <!-- / page-content-wrapper -->
</div>
